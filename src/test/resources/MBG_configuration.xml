<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">
<generatorConfiguration>
    <context id="MySQLTables" targetRuntime="MyBatis3">
        <plugin type="com.mo.network.mybatisgenerator.MySQLGeneratorPrimaryKeyPlugin"></plugin>
        <commentGenerator type="com.mo.network.mybatisgenerator.MyCommentGenerator">
        </commentGenerator>
        <!-- 生发环境数据库配置:修改配置 -->
        <jdbcConnection driverClass="com.mysql.jdbc.Driver"
                        connectionURL="jdbc:mysql://localhost:3306/db_order_0?useSSL=false"
                        userId="root" password="password">
        </jdbcConnection>
        <javaTypeResolver>
            <property name="forceBigDecimals" value="false"/>
        </javaTypeResolver>
        <!--targetProject请使用绝对路径-->
        <javaModelGenerator targetPackage="com.mo.network.entity"
                            targetProject="D:\Workspace\mine\sharding-jdbc-test\jdbc-mapper\src\main\java">
            <property name="enableSubPackages" value="true"/>

            <property name="trimStrings" value="true"/>
        </javaModelGenerator>
        <sqlMapGenerator targetPackage="mybatis"
                         targetProject="D:\Workspace\mine\sharding-jdbc-test\jdbc-mapper\src\main\resources">
            <property name="enableSubPackages" value="true"/>
        </sqlMapGenerator>
        <javaClientGenerator type="XMLMAPPER" targetPackage="com.mo.network.mapper"
                             targetProject="D:\Workspace\mine\sharding-jdbc-test\jdbc-mapper\src\main\java">

            <property name="enableSubPackages" value="true"/>
        </javaClientGenerator>


        <table tableName="t_order_item_0"
               domainObjectName="OrderItem"
               enableCountByExample="true"
               enableUpdateByExample="true" enableDeleteByExample="true"
               enableSelectByExample="true" selectByExampleQueryId="true"
               enableInsert="true" enableUpdateByPrimaryKey="true"
               enableDeleteByPrimaryKey="true">
            <property name="useActualColumnNames" value="false"/>

            <columnOverride column="LONG_VARCHAR_FIELD" jdbcType="VARCHAR"/>
        </table>



    </context>
</generatorConfiguration>